!!!
%html
  %head
    %title Kids Code Camp - Teaching The Kids of Planet Earth To Code
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "jquery.tweetable.js"
    = csrf_meta_tags
    %link{ href: 'favicon.ico', rel: 'icon', type: 'image/png' }
  %body
    .page-header
      = image_tag "header_logo.png", :class => "header-logo"
      = image_tag "header_sun.png", :class => "header-sun"
    .page-nav
      .page-nav-blue
      .page-nav-orange
      .page-nav-items
        .nav-item
          = link_to "Home", root_path
        .nav-item
          = link_to "About", about_path
        .nav-item.coming-soon
          = link_to "Tools & Toys", tools_path
        .nav-item.coming-soon
          = link_to "Lessons", lessons_path
        .nav-item.coming-soon
          = link_to "Community", community_path
        .nav-item
          = link_to "Contact Us", contact_forms_path
    .page-content
      = yield
      = render :partial => "layouts/sidebar"
    = render :partial => "layouts/footer"
