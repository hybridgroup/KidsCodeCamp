= form_for [:admin,@event] do |f|
  - if @event.errors.any?
    #error_explanation
      %h2.title= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .input.text
    = f.label :title, "Title", :class => 'control-label'
    = f.text_field :title, :class => 'text_field'

  .control-group
    = f.label :slug, "Slug", :class => 'control-label'
    .input
      = f.text_field :slug, :class => 'text_field'

  .control-group
    = f.label :content, "Content", :class => 'control-label'
    .input
      = f.text_area :content, :class => 'text_area'
      %p.legend= link_to 'Markdown is allowed', 'http://en.wikipedia.org/wiki/Markdown#Syntax_examples', :target => '_blank', :rel => 'nofollow'

  .actions
    = f.submit 'Save'
