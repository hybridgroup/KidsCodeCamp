= render :partial => "devise/session_links"
%h1.section-title Community
.community_controls
  = form_tag(posts_path, :class => 'category_select') do
    = submit_tag "Filter by:"
    = select_tag(:category, options_for_select(['All','General','Discussion','Teachers'],params[:category]))
  %p
    - if !current_user.nil?
      = link_to 'New Post', new_admin_post_path
    - else
      = link_to 'Login to Post', login_path

%table#topics-table
  %tr
    %th Topic
    %th Author
    %th Category
    %th Created

  - @posts.each do |post|
    %tr
      %td= link_to post.title, post
      %td= post.user.username
      %td= post.category
      %td= post.created_at.strftime("%a, %D at %R")
= will_paginate @posts

/ = form_tag(search_path, :method => "get") do
/   = label_tag(:q, "Search for:")
/   = text_field_tag(:q)
/   = submit_tag("Search")