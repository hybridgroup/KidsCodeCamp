- editable = user_signed_in? && post.user_id == current_user.id && action_name == 'show'
%tr.separator
  %td.post_created{colspan:2}= post.created_at.strftime("%a, %b %e %Y at %R")
%tr
  %td.post_author{rowspan:editable ? 4 :3}
    %p= post.user.try(:username)
%tr
  %td.post_title
    %h3.blue-title= post.title
%tr
  %td.post_content= post.content
- if editable
  %tr.actions
    %td
      = link_to('Edit', edit_admin_post_path(post)) + ' | '
      = link_to 'Destroy', admin_post_path(post), :method => :delete, :data => { :confirm => 'Are you sure?' }