- editable = user_signed_in? && (current_user.is_admin? || post.user_id == current_user.id) && action_name == 'show'
.topics
  .td.post_created #{gravatar(post.user, :size => 24)} Posted by #{content_tag('strong',post.user.username)} â€“ #{post.created_at.strftime("%a, %b %e %Y at %R")}
  .td.post_content
    = markdown(post.content)
  - if editable
    .td.action
      = link_to('Edit', edit_category_post_path(@category,post)) + ' | '
      = link_to 'Destroy', {:category_id => @category, :id => post}, :method => :delete, :data => { :confirm => 'Are you sure?' }